<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:CircleProgressView="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/space"
    android:layout_marginRight="@dimen/space"
    android:layout_marginTop="@dimen/space"
    android:orientation="vertical"
    app:cardCornerRadius="2dp"
    app:cardElevation="@dimen/space">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:background="#ffffff"
        android:orientation="vertical"
        android:padding="@dimen/space"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
            android:id="@+id/Niti"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nitiddddddddddddddd"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="@dimen/textsize_XH"
            android:textStyle="bold" />
            <TextView
                android:id="@+id/PM"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PMs :"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/textsize"
                 />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/space"
                android:paddingTop="@dimen/space"
                android:weightSum="3">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_condo"
                            android:tint="@color/colorButton" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginRight="20dp"
                            android:gravity="center"
                            android:text="Project"
                            android:textColor="@color/colorPrimaryDark"
                            android:textSize="10dp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <at.grabner.circleprogress.CircleProgressView
                        android:id="@+id/circleView1"
                        android:padding="5dp"
                        android:layout_width="@dimen/circle"
                        android:layout_height="@dimen/circle"
                        app:cpv_autoTextSize="false"
                        app:cpv_barColor="#b11717"
                        app:cpv_barColor1="#ede247"
                        app:cpv_barColor2="#018f6e"
                        app:cpv_barWidth="@dimen/barwitdh"
                        app:cpv_maxValue="100"
                        app:cpv_rimColor="@color/colorBG2"
                        app:cpv_rimWidth="18dp"
                        app:cpv_showUnit="true"
                        app:cpv_textColor="@color/colorPrimaryDark"
                        app:cpv_textSize="@dimen/textsize_XH"
                        app:cpv_unit="%"
                        app:cpv_unitColor="@color/colorPrimaryDark"
                        app:cpv_unitPosition="right_bottom"
                        app:cpv_unitSize="@dimen/space" />

                    <LinearLayout
                        android:paddingLeft="@dimen/space"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical">
                        <TextView
                            android:textStyle="bold"
                            android:id="@+id/target"
                            android:textColor="@color/colorPrimaryDark"
                            android:text="S : ไม่ระบุ"
                            android:layout_marginBottom="@dimen/space"
                            android:autoSizeTextType="uniform"
                            android:autoSizeMinTextSize="10sp"
                            android:autoSizeMaxTextSize="100sp"
                            android:layout_width="match_parent"
                            android:layout_height="20dp" />
                        <TextView
                            android:id="@+id/done"
                            android:textStyle="bold"
                            android:textColor="@color/colorPrimaryDark"
                            android:text="F : ไม่ระบุ"
                            android:autoSizeTextType="uniform"
                            android:autoSizeMinTextSize="10sp"
                            android:autoSizeMaxTextSize="100sp"
                            android:layout_width="match_parent"
                            android:layout_height="20dp" />

                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_green"
                            android:tint="#02b98e" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginRight="20dp"
                            android:gravity="center"
                            android:text="Green"
                            android:textColor="#02b98e"
                            android:textSize="10dp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <at.grabner.circleprogress.CircleProgressView
                        android:id="@+id/circleView2"
                        android:layout_width="@dimen/circle"
                        android:layout_height="@dimen/circle"
                        android:padding="5dp"
                        app:cpv_autoTextSize="false"
                        app:cpv_barColor="#b11717"
                        app:cpv_barColor1="#ede247"
                        app:cpv_barColor2="#018f6e"
                        app:cpv_barWidth="@dimen/barwitdh"
                        app:cpv_maxValue="100"
                        app:cpv_rimColor="@color/colorBG2"
                        app:cpv_rimWidth="18dp"
                        app:cpv_showUnit="true"
                        app:cpv_textColor="@color/colorPrimaryDark"
                        app:cpv_textSize="@dimen/textsize_XH"
                        app:cpv_unit="%"
                        app:cpv_unitColor="@color/colorPrimaryDark"
                        app:cpv_unitPosition="right_bottom"
                        app:cpv_unitSize="@dimen/textsize"
                        app:cpv_value="0" />
                    <LinearLayout
                        android:paddingLeft="@dimen/space"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical">
                        <TextView
                            android:textStyle="bold"
                            android:id="@+id/targetGreen"
                            android:textColor="#02b98e"
                            android:text="เป้า ไม่ระบุ"
                            android:layout_marginBottom="@dimen/space"
                            android:autoSizeTextType="uniform"
                            android:autoSizeMinTextSize="10sp"
                            android:autoSizeMaxTextSize="100sp"
                            android:layout_width="match_parent"
                            android:layout_height="20dp" />
                        <TextView
                            android:id="@+id/doneGreen"
                            android:textStyle="bold"
                            android:textColor="#02b98e"
                            android:text="ผ่าน ไม่ระบุ"
                            android:autoSizeTextType="uniform"
                            android:autoSizeMinTextSize="10sp"
                            android:autoSizeMaxTextSize="100sp"
                            android:layout_width="match_parent"
                            android:layout_height="20dp" />


                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_perform"
                            android:tint="#02a8b7" />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:text="Performance"
                            android:textColor="#02a8b7"
                            android:textSize="10dp"
                            android:textStyle="bold" />
                    </LinearLayout>
                    <at.grabner.circleprogress.CircleProgressView
                        android:id="@+id/circleView3"
                        android:padding="5dp"
                        android:layout_width="@dimen/circle"
                        android:layout_height="@dimen/circle"
                        app:cpv_autoTextSize="false"
                        app:cpv_barColor="#b11717"
                        app:cpv_barColor1="#ede247"
                        app:cpv_barColor2="#018f6e"
                        app:cpv_barWidth="@dimen/barwitdh"
                        app:cpv_maxValue="100"
                        app:cpv_rimColor="@color/colorBG2"
                        app:cpv_rimWidth="18dp"
                        app:cpv_showUnit="true"
                        app:cpv_textColor="@color/colorPrimaryDark"
                        app:cpv_textSize="@dimen/textsize_XH"
                        app:cpv_unit="%"
                        app:cpv_unitColor="@color/colorPrimaryDark"
                        app:cpv_unitPosition="right_bottom"
                        app:cpv_unitSize="@dimen/textsize"
                        app:cpv_value="0" />
                    <LinearLayout
                        android:paddingLeft="@dimen/space"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical">
                        <TextView
                            android:textStyle="bold"
                            android:id="@+id/targetPerform"
                            android:textColor="#02a8b7"
                            android:text="ถึงช่วง ไม่ระบุ"
                            android:layout_marginBottom="@dimen/space"
                            android:autoSizeTextType="uniform"
                            android:autoSizeMinTextSize="10sp"
                            android:autoSizeMaxTextSize="100sp"
                            android:layout_width="match_parent"
                            android:layout_height="20dp" />
                        <TextView
                            android:id="@+id/donePerform"
                            android:textStyle="bold"
                            android:textColor="#02a8b7"
                            android:text="ผ่าน ไม่ระบุ"
                            android:autoSizeTextType="uniform"
                            android:autoSizeMinTextSize="10sp"
                            android:autoSizeMaxTextSize="100sp"
                            android:layout_width="match_parent"
                            android:layout_height="20dp" />


                    </LinearLayout>

            </LinearLayout>

            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:drawableLeft="@drawable/ic_report"
                android:id="@+id/summary"
                android:theme="@style/MyButton"
                android:text="Summary"
                android:textColor="#ffff"
                android:layout_weight=".5"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
            <Button
                android:drawableLeft="@drawable/ic_report"
                android:id="@+id/detail"
                android:theme="@style/MyButton"
                android:text="Detail"
                android:textColor="#ffff"
                android:layout_weight=".5"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>


</android.support.v7.widget.CardView>