<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/row"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    app:cardElevation="@dimen/space">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/greyish"
        android:orientation="horizontal"
        android:padding="@dimen/space">

        <ImageView
            android:id="@+id/pic"
            android:layout_width="@dimen/picWH"
            android:layout_height="@dimen/picWH"
            android:layout_gravity="center_vertical"
            android:background="@color/blankpic"
            android:src="@drawable/ic_blank" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/space"
            android:orientation="vertical">

            <TextView
                android:id="@+id/topic"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/space"
                android:text="TOPICCCCCCCCCCCCCCCCCCCCCCCCCCC"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/textsize"
                android:textStyle="bold" />

            <TextView
                android:layout_marginBottom="@dimen/space"
                android:id="@+id/detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="detaillllllllllllllllllllllllllllllllllll"
                android:textSize="@dimen/textsize" />


            <TextView
                android:id="@+id/result"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:text="รายงานแล้ว (รออนุมัติ)"
                android:textSize="@dimen/textsize"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/res_user"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="โดย : ผู้รายงาน"
                android:textSize="@dimen/textsize"
                 />

            <TextView
                android:id="@+id/approve"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ผ่าน/ไม่ผ่าน"
                android:textSize="@dimen/textsize"
                android:textStyle="bold"
                android:visibility="visible" />

            <TextView
                android:id="@+id/app_user"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="โดย : ผู้อนุมัติ"
                android:textSize="@dimen/textsize"
                 />

        </LinearLayout>

    </LinearLayout>

    <!--<ImageView-->
    <!--android:id="@+id/status"-->
    <!--android:layout_width="wrap_content"-->
    <!--android:layout_height="wrap_content"-->
    <!--android:layout_gravity="bottom|right"-->
    <!--android:padding="10dp"-->
    <!--android:src="@drawable/ic_available"/>-->

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_gravity="bottom"
        android:background="#686868" />
</android.support.v7.widget.CardView>