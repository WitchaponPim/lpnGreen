<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:CircleProgressView="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/space"
    android:orientation="vertical"
    app:cardCornerRadius="2dp"
    app:cardElevation="@dimen/space">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/space"
        android:background="#ffffff"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/Niti"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorPrimaryDark"
                android:text="Nitiddddddddddddddd"
                android:textSize="@dimen/textsize_XH"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:orientation="horizontal"
                android:paddingTop="@dimen/space"
                android:paddingBottom="@dimen/space"
                android:weightSum="3">

                <LinearLayout
                    android:layout_width="0dp"

                    android:layout_height="match_parent"
                    android:layout_weight="1.2"
                    android:gravity="center"
                    android:orientation="vertical">
                    <TextView
                        android:text="ความคืบหน้าโครงการ"
                        android:gravity="center_vertical"
                        android:textStyle="bold"
                        android:textColor="@color/colorPrimaryDark"
                        android:drawableTint="@color/colorButton"
                        android:drawableLeft="@drawable/ic_condo"
                        android:textSize="12dp"
                        android:layout_width="match_parent"
                        android:layout_height="25dp" />
                    <at.grabner.circleprogress.CircleProgressView
                        android:id="@+id/circleView1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        app:cpv_autoTextSize="false"
                        app:cpv_barColor="#b11717"
                        app:cpv_barColor1="#ede247"
                        app:cpv_barColor2="#018f6e"
                        app:cpv_barWidth="20dp"
                        app:cpv_maxValue="100"
                        app:cpv_rimColor="@color/colorBG2"
                        app:cpv_rimWidth="18dp"
                        app:cpv_showUnit="true"
                        app:cpv_textColor="@color/colorPrimaryDark"
                        app:cpv_textSize="@dimen/textsize_XH"
                        app:cpv_unit="%"
                        app:cpv_unitColor="@color/colorPrimaryDark"
                        app:cpv_unitPosition="right_bottom"
                        app:cpv_unitSize="@dimen/space"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.2"
                    android:gravity="center"
                    android:orientation="vertical">
                    <TextView
                        android:text="ความคืบหน้า Green"
                        android:textStyle="bold"
                        android:drawableTint="#02b98e"
                        android:drawableLeft="@drawable/ic_green"
                        android:textColor="#02b98e"
                        android:gravity="center_vertical"
                        android:textSize="12dp"
                        android:layout_width="match_parent"
                        android:layout_height="25dp" />
                    <at.grabner.circleprogress.CircleProgressView
                        android:id="@+id/circleView2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:cpv_autoTextSize="false"
                        app:cpv_barColor="#b11717"
                        app:cpv_barColor1="#ede247"
                        app:cpv_barColor2="#018f6e"
                        app:cpv_barWidth="20dp"
                        app:cpv_maxValue="100"
                        app:cpv_rimColor="@color/colorBG2"
                        app:cpv_rimWidth="18dp"
                        app:cpv_showUnit="true"
                        app:cpv_textColor="@color/colorPrimaryDark"
                        app:cpv_textSize="@dimen/textsize_XH"
                        app:cpv_unit="%"
                        app:cpv_unitColor="@color/colorPrimaryDark"
                        app:cpv_unitPosition="right_bottom"
                        app:cpv_unitSize="@dimen/textsize"
                        app:cpv_value="0" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight=".6"
                    android:gravity="center"
                    android:orientation="vertical">
                    <TextView
                        android:textStyle="bold"
                        android:id="@+id/target"
                        android:textColor="#3966a8"
                        android:text="เป้า 71 ข้อ"
                        android:layout_marginBottom="@dimen/space"
                        android:autoSizeTextType="uniform"
                        android:autoSizeMinTextSize="10sp"
                        android:autoSizeMaxTextSize="100sp"
                        android:layout_width="match_parent"
                        android:layout_height="20dp" />
                    <TextView
                        android:id="@+id/done"
                        android:textStyle="bold"
                        android:textColor="#3966a8"
                        android:text="ทำได้ 20 ข้อ"
                        android:autoSizeTextType="uniform"
                        android:autoSizeMinTextSize="10sp"
                        android:autoSizeMaxTextSize="100sp"
                        android:layout_width="match_parent"
                        android:layout_height="20dp" />


                </LinearLayout>
            </LinearLayout>




        </LinearLayout>


    </LinearLayout>


</android.support.v7.widget.CardView>